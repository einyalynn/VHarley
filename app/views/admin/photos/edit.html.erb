
<p><%= link_to "Back to List", admin_photos_path %>  </p>
<br />

<%= form_for [:admin, @photoModel.photo], :html => { :enctype => "multipart/form-data"} do |f| %>

    <%= label_tag(:title, "Short title:") %>
    <%= f.text_field :title, 'required' => '' %>
    <%= label_tag(:portfolio, "Portfolio:") %>
    <%= f.select :portfolio, %w[food interiors features] %>
    <%= label_tag(:sequence, "Order of the image on the page:") %>
    <%= f.number_field :sequence, {:min=> 0, :step => 1} %>
    <%= label_tag(:visible, "Should the image be shown:") %>
    <%= f.check_box :visible %>
    <%= label_tag(:horizontal, "Is the image horizontal:") %>
    <%= f.check_box :horizontal %>
    <%= label_tag(:url, "Photo Location:") %>
    <%= f.text_field :url %>
        <%= label_tag('picture', "Replace image:") %>
    <input id="photoModel_picture" type="file" name="photoModel[picture]">

    <br />
    <%= submit_tag("Update") %>
<% end %>

<%= image_tag @photoModel.photo.url, :alt => @photoModel.photo.title %>