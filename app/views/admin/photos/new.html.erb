<div class="row-fluid">
  <div class="span12">
    <div class="featured-area">
<p><%= link_to "Back to List", admin_photos_path %>  </p>

<%= form_for [:admin, @photo] do |f| %>

    <%= label_tag(:title, "Short title:") %>
    <%= f.text_field :title, 'required' => '' %>
          <br />
    <%= label_tag(:portfolio, "Portfolio:") %>
    <%= f.select :portfolio, %w[food interiors published] %>
          <br />
    <%= label_tag(:sequence, "Order of the image on the page:") %>
    <%= f.number_field :sequence, {:min=> 0, :step => 1} %>
          <br />
    <%= label_tag(:visible, "Should the image be shown:", :class=> "inline") %>
    <%= f.check_box :visible %>
          <br />
          <br />
    <%= label_tag(:horizontal, "Is the image horizontal:", :class=> "inline") %>
    <%= f.check_box :horizontal %>
          <br />
          <br />
    <%= label_tag(:picture, "Select an image:") %>
    <%= f.file_field :picture, 'required' => '' %>
          <br />
          <br />
    <%= submit_tag("Upload Image") %>
<% end %>
      </div>
    </div>
</div>