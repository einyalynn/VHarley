<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.21/jquery-ui.min.js" type="text/javascript"
        xmlns="http://www.w3.org/1999/html"></script>
<%= javascript_include_tag "widgets/portfolio" %>
<%= javascript_include_tag "widgets/jquery.easing.1.3" %>
<script type="text/javascript">
  $(function(){
     $('.portfolio-slider').portfolio({width:691.75});
  })
</script>
<div class="portfolio-slider">
  <div class="portfolio-left"><a title="previous" href="#"><i class='icon-step-backward'></i></a></div>
  <div class="portfolio-container">
  <ul>
    <% photoCount = 0 %>
<% @photos.each do |p| %>
        <% if photoCount < 1 %>
            <li class="image <%= p.horizontal ? 'image-horizontal' : '' %> ">
        <% end
           photoCount += 1
        %>
        <%= image_tag p.url, :alt => p.title %>
        <% if photoCount == 2 || p.horizontal
                photoCount = 0
        %>
            </li>
        <% else
           end  %>

<% end %>
  </ul>
  </div>
  <div class="portfolio-right"><a title="next" href="#"><i class='icon-step-forward'></i></a></div>
  <div class="portfolio-pager"></div>
</div>