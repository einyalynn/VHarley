<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.21/jquery-ui.min.js" type="text/javascript"></script>
<%= javascript_include_tag "widgets/portfolio" %>
<script type="text/javascript">
  $(function(){
     $('.portfolio-slider').portfolio();
  })
</script>
<div class="portfolio-slider">
  <div class="portfolio-left"></div>
  <div class="portfolio-container"></div>
<% @photos.each do |p| %>
    <div class="image">
        <%= image_tag p.url, :alt => p.title %>
    </div>
<% end %>
  <div class="portfolio-right"></div>
  <div class="portfolio-pager"></div>
</div>